            },
            "us-east-2": {
                "HVM64": "ami-a7aa8ac2",
                "Note": "(Ohio) Ubuntu 16.04 LTS - Xenial (HVM)"
            },
            "ca-central-1": {
                "HVM64": "ami-b3cf71d7",
                "Note": "(Canada - Central) Ubuntu 16.04 LTS - Xenial (HVM)"
            },
            "eu-west-1": {
                "HVM64": "ami-016f9e78",
                "Note": "(Ireland)       Ubuntu 16.04 LTS - Xenial (HVM)"
            },
            "eu-west-2": {
                "HVM64": "ami-fde6f799",
