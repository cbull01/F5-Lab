                        },
                        "Primary": "false"
                    },
                    {
                        "PrivateIpAddress": {
                            "Ref": "Server1Eth02PrivateIP"
                        },
                        "Primary": "false"
                    },
                    {
                        "PrivateIpAddress": {
                            "Ref": "Server1Eth03PrivateIP"
                        },
                        "Primary": "false"
                    }
                ],
                "SourceDestCheck": "true",
                "Tags": [
                    {
                        "Key": "Network",
                        "Value": "PrimaryNIC"
                    },
                    {
                        "Key": "Name",
                        "Value": "Server1:PrimaryNIC"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "81113191-81e4-4c1b-b3bb-a1f32a0012e3"
                }
            }
        },
        "Server1Eth1Interface": {
            "Type": "AWS::EC2::NetworkInterface",
            "Properties": {
                "SubnetId": {
                    "Ref": "ManagementSubnet"
                },
                "Description": "Interface for Management Access",
                "GroupSet": [
                    {
                        "Ref": "InternalPortControlSG"
                    }
                ],
                "PrivateIpAddresses": [
                    {
                        "PrivateIpAddress": {
                            "Ref": "Server1Eth1PrivateIP"
                        },
                        "Primary": "true"
                    }
                ],
                "SourceDestCheck": "true",
                "Tags": [
                    {
                        "Key": "Network",
                        "Value": "MngmtAccess"
                    },
                    {
                        "Key": "Name",
                        "Value": "Server1:ManagementAccess"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "8876d620-e136-4b60-af3a-774484a161b2"
                }
            }
        },
        "Server1EipAddress": {
            "Properties": {
                "Domain": "VPC"
            },
            "Type": "AWS::EC2::EIP"
        },
        "Server1EipAssociation": {
            "Type": "AWS::EC2::EIPAssociation",
            "Properties": {
                "AllocationId": {
                    "Fn::GetAtt": [
                        "Server1EipAddress",
                        "AllocationId"
                    ]
                },
                "NetworkInterfaceId": {
                    "Ref": "Server1Eth1Interface"
                }
            }
        }		
    },
    "Outputs": {
        "Server1IP": {
            "Description": "SSH from Jumpbox to Server1 internal IP",
            "Value": {
                "Ref": "Server1Eth1PrivateIP"
            }
        },
        "Server1Password": {
            "Description": "Default ubuntu user setup password for internal ssh access",
